{
  "name": "Active Pull",
  "description": "Pull all items to you from 50 blocks radius",
  "type": "apoli:multiple",
  "pull": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "apoli:area_of_effect",
      "radius": 50,
      "bientity_condition": {
        "type": "apoli:target_condition",
        "condition": {
          "type": "apoli:entity_type",
          "entity_type": "item"
        }
      },
      "bientity_action": {
        "type": "apoli:add_velocity",
        "z": -0.1,
        "client": true,
        "server": true
      }
    }
  },
  "pull_active": {
    "type": "apoli:action_over_time",
    "interval": 400,
    "rising_action": {
      "type": "apoli:grant_power",
      "power": "*:*_pull",
      "source": "*:*"
    },
    "falling_action": {
      "type": "apoli:revoke_power",
      "power": "*:*_pull",
      "source": "*:*"
    }
  },
  "keypresspull": {
    "type": "shappoli:action_on_trinket_key_press",
    "slot_linked_key": "essencelib:essencelib",
    "item_condition": {
      "type": "shappoli:has_trinket_power",
      "power": "*:*"
    },
    "entity_action": {
      "type": "apoli:grant_power",
      "power": "*:*_pull_active",
      "source": "*:*"
    },
    "cooldown": 6000,
    "hud_render": {
      "should_render": true
    }
  }
}
