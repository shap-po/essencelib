{
  "name": "Active Pull",
  "description": "Pull all items to you from 50 blocks radius",
  "type": "apoli:multiple",
  "pull": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "apoli:area_of_effect",
      "radius": 50,
      "bientity_condition": {
        "type": "apoli:target_condition",
        "condition": {
          "type": "apoli:entity_type",
          "entity_type": "item"
        }
      },
      "bientity_action": {
        "type": "apoli:add_velocity",
        "direction": {
          "type": "apoli:relative_position",
          "target": "actor"
        },
        "speed": 1.2,
        "modifier": {
          "operation": "multiply_base",
          "value": {
            "type": "apoli:loot_item_distance",
            "target": "actor",
            "inverted": true,
            "scaling": "quadratic",
            "min": 0.1,
            "max": 2.0
          }
        },
        "vertical_boost": 0.3,
        "client": true,
        "server": true
      }
    }
  },
  "pull_active": {
    "type": "apoli:action_over_time",
    "interval": 20,
    "rising_action": {
      "type": "apoli:grant_power",
      "power": "esspack:*_pull",
      "source": "*:*"
    },
    "falling_action": {
      "type": "apoli:revoke_power",
      "power": "esspack:*_pull",
      "source": "*:*"
    }
  },
  "keypresspull": {
    "type": "shappoli:action_on_trinket_key_press",
    "key": "essencelib:essencelib",
    "item_condition": {
      "type": "shappoli:has_trinket_power",
      "power": "*:*_pull_active"
    },
    "entity_action": {
      "type": "apoli:toggle",
      "power": "*:*"
    },
    "cooldown": 100,
    "hud_render": {
      "should_render": true
    }
  }
}
