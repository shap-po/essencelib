{
  "name": "Zombie Camouflage",
  "description": "Zombies ignore you unless you attack them, allowing you to blend in with hordes.",
  "type": "apoli:multiple",
  "rma_cleanup": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "apoli:and",
      "actions": [
        {
          "type": "apoli:revoke_power",
          "power": "*:*_tick_timer",
          "source": "*:zombie_camouflage"
        },
        {
          "type": "apoli:change_resource",
          "resource": "*:*_rma_timer",
          "change": 0,
          "operation": "set"
        },
        {
          "type": "apoli:execute_command",
          "command": "team add zombie"
        },
        {
          "type": "apoli:execute_command",
          "command": "team join zombie @s"
        },
        {
          "type": "apoli:revoke_power",
          "power": "*:*_rma_cleanup",
          "source": "*:zombie_camouflage"
        }
      ]
    }
  },
  "rma_timer": {
    "type": "apoli:resource",
    "min": 0,
    "max": 600,
    "start_value": 0,
    "hud_render": {
      "should_render": false,
      "sprite_location": "apoli:textures/gui/resource_bar.png",
      "bar_index": 4
    },
    "max_action": {
      "type": "apoli:grant_power",
      "power": "*:*_rma_cleanup",
      "source": "*:zombie_camouflage"
    }
  },
  "rma_collect": {
    "type": "apoli:action_over_time",
    "interval": 5,
    "entity_action": {
      "type": "apoli:execute_command",
      "command": "team join zombie\n@e[type=esspack:zombie]"
    }
  },
  "rma_trigger_mobs_on_hit": {
    "type": "apoli:action_on_hit",
    "bientity_action": {
      "type": "apoli:actor_action",
      "action": {
        "type": "apoli:and",
        "actions": [
          {
            "type": "apoli:execute_command",
            "command": "team leave @s[team=zombie]"
          },
          {
            "type": "apoli:grant_power",
            "power": "*:*_tick_timer",
            "source": "*:zombie_camouflage"
          }
        ]
      }
    },
    "bientity_condition": {
      "type": "apoli:target_condition",
      "condition": {
        "type": "apoli:in_tag",
        "tag": "*:zombie"
      }
    },
    "cooldown": 1,
    "hud_render": {
      "should_render": true
    }
  },
  "rma_reset_timer_on_hit": {
    "type": "apoli:action_on_hit",
    "bientity_action": {
      "type": "apoli:actor_action",
      "action": {
        "type": "apoli:change_resource",
        "resource": "*:*_rma_timer",
        "change": 0,
        "operation": "set"
      }
    },
    "bientity_condition": {
      "type": "apoli:target_condition",
      "condition": {
        "type": "apoli:in_tag",
        "tag": "*:zombie"
      }
    },
    "cooldown": 1,
    "hud_render": {
      "should_render": true
    }
  },
  "tick_timer": {
    "type": "apoli:action_over_time",
    "interval": 1,
    "entity_action": {
      "type": "apoli:change_resource",
      "resource": "*:*_rma_timer",
      "change": 1,
      "operation": "add"
    }
  }
}