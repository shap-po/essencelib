{
  "name": "Undead Fortification",
  "description": "Temporarily gain increased resistance to all damage types for 10 seconds. This ability has a cooldown of 5 minutes.",
  "type": "apoli:multiple",
  "fort": {
    "type": "apoli:modify_damage_taken",
    "modifier": {
      "operation": "multiply_base_additive",
      "amount": -0.5
    }
  },
  "fortactive": {
    "type": "apoli:action_over_time",
    "interval": 400,
    "rising_action": {
      "type": "apoli:grant_power",
      "power": "*:*_fort",
      "source": "*:*"
    },
    "falling_action": {
      "type": "apoli:revoke_power",
      "power": "*:*_fort",
      "source": "*:*"
    }
  },
  "keypressfort": {
    "type": "shappoli:slot_linked_active",
    "slot_linked_key": "essencelib:essencelib",
    "entity_action": {
      "type": "apoli:grant_power",
      "power": "*:*_fortactive",
      "source": "*:*"
    },
    "cooldown": 6000,
    "hud_render": {
      "should_render": true
    }
  }
}