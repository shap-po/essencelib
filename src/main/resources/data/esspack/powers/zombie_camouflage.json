{
    "name": "Zombie Camouflage",
    "description": "Zombies ignore you unless you attack them, allowing you to blend in with hordes.",
    "type": "origins:multiple",
    "rma_cleanup": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:and",
            "actions": [
                {
                    "type": "origins:revoke_power",
                    "power": "*:zombie_camouflage_tick_timer",
                    "source": "*:zombie_camouflage"
                },
                {
                    "type": "origins:change_resource",
                    "resource": "*:zombie_camouflage_rma_timer",
                    "change": 0,
                    "operation": "set"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team add zombie"
                },
                {
                    "type": "origins:execute_command",
                    "command": "team join zombie @s"
                },
                {
                    "type": "origins:revoke_power",
                    "power": "*:zombie_camouflage_rma_cleanup",
                    "source": "*:zombie_camouflage"
                }
            ]
        }
    },
    "rma_timer": {
        "type": "origins:resource",
        "min": 0,
        "max": 600,
        "start_value": 0,
        "hud_render": {
            "should_render": false,
            "sprite_location": "origins:textures/gui/resource_bar.png",
            "bar_index": 4
        },
        "max_action": {
            "type": "origins:grant_power",
            "power": "*:zombie_camouflage_rma_cleanup",
            "source": "*:zombie_camouflage"
        }
    },
    "rma_collect": {
        "type": "origins:action_over_time",
        "interval": 5,
        "entity_action": {
            "type": "origins:execute_command",
            "command": "team join zombie\n@e[type=esspack:zombie]"
        }
    },
    "rma_trigger_mobs_on_hit": {
        "type": "origins:action_on_hit",
        "bientity_action": {
            "type": "origins:actor_action",
            "action": {
                "type": "origins:and",
                "actions": [
                    {
                        "type": "origins:execute_command",
                        "command": "team leave @s[team=zombie]"
                    },
                    {
                        "type": "origins:grant_power",
                        "power": "*:zombie_camouflage_tick_timer",
                        "source": "*:zombie_camouflage"
                    }
                ]
            }
        },
        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                    "type": "origins:in_tag",
                "tag": "*:entity_type/zombie"
            }
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": true
        }
    },
    "rma_reset_timer_on_hit": {
        "type": "origins:action_on_hit",
        "bientity_action": {
            "type": "origins:actor_action",
            "action": {
                "type": "origins:change_resource",
                "resource": "*:zombie_camouflage_rma_timer",
                "change": 0,
                "operation": "set"
            }
        },
        "bientity_condition": {
            "type": "origins:target_condition",
            "condition": {
                "type": "origins:in_tag",
                "tag": "*:entity_type/zombie"
            }
        },
        "cooldown": 1,
        "hud_render": {
            "should_render": true
        }
    },
    "tick_timer": {
        "type": "origins:action_over_time",
        "interval": 1,
        "entity_action": {
            "type": "origins:change_resource",
            "resource": "*:zombie_camouflage_rma_timer",
            "change": 1,
            "operation": "add"
        }
    }
}